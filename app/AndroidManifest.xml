<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.robertboloc.holaurv"
    android:installLocation="auto"
    android:versionCode="3"
    android:versionName="1.2.0 Bloody Mary" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="eu.robertboloc.holaurv.HoLaURV_"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/brand"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="eu.robertboloc.holaurv.LoginActivity_"
            android:label="@string/brand" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eu.robertboloc.holaurv.DisplayActivity"
            android:theme="@style/Theme.Holaurv" />
        <activity android:name="eu.robertboloc.holaurv.AboutActivity_" />
        <activity
            android:name="eu.robertboloc.holaurv.ReportActivity"
            android:parentActivityName="eu.robertboloc.holaurv.DisplayActivity"
            android:theme="@style/Theme.Holaurv" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.robertboloc.holaurv.DisplayActivity" />
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>